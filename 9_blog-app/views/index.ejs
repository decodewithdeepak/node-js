<%- include('partials/header', {title: 'Home - Blog App' }) %>

    <div class="container mt-4">
        <!-- Message container for notifications -->
        <div id="main-message"></div>

        <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
            <h1 class="display-4">Welcome to Blog App</h1>
            <p class="lead">Share your thoughts, stories, and ideas with the world.</p>
            <a class="btn btn-light btn-lg" href="/register" role="button">Get Started</a>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h2>Latest Posts</h2>
                <div id="latest-posts">
                    <!-- Posts will be loaded here via JavaScript -->
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('partials/footer') %>