<%- include('partials/header', {title: 'Blog - Blog App' }) %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <% if (locals.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                    <% } %>

                        <% if (blog) { %>
                            <article>
                                <h1>
                                    <%= blog.title %>
                                </h1>
                                <small class="text-muted">By <%= blog.author.username %> ‚Ä¢ <%= new
                                            Date(blog.createdAt).toLocaleDateString() %></small>
                                <div class="mt-4">
                                    <%- blog.content.replace(/\n/g, '<br>' ) %>
                                </div>

                                <!-- Like Section -->
                                <% if (user) { %>
                                    <div class="mt-4">
                                        <form action="/blog/like/<%= blog._id %>" method="POST"
                                            style="display: inline;">
                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                ‚ù§Ô∏è Like (<%= blog.likes ? blog.likes.length : 0 %>)
                                            </button>
                                        </form>
                                    </div>
                                    <% } else { %>
                                        <div class="mt-4">
                                            <span class="text-muted">‚ù§Ô∏è <%= blog.likes ? blog.likes.length : 0 %>
                                                    likes</span>
                                        </div>
                                        <% } %>

                                            <!-- Comments Section -->
                                            <div class="mt-5">
                                                <h5>Comments</h5>

                                                <!-- Add Comment Form (only for logged in users) -->
                                                <% if (user) { %>
                                                    <div class="mb-4">
                                                        <form action="/comment/<%= blog._id %>" method="POST">
                                                            <div class="mb-3">
                                                                <textarea class="form-control" name="content" rows="3"
                                                                    placeholder="Write a comment..."
                                                                    required></textarea>
                                                            </div>
                                                            <button type="submit" class="btn btn-primary btn-sm">Add
                                                                Comment</button>
                                                        </form>
                                                    </div>
                                                    <% } %>

                                                        <!-- Display Comments -->
                                                        <% if (blog.comments && blog.comments.length> 0) { %>
                                                            <% blog.comments.forEach(comment=> { %>
                                                                <div class="card mb-3">
                                                                    <div class="card-body">
                                                                        <div class="d-flex justify-content-between">
                                                                            <strong>
                                                                                <%= comment.author.username %>
                                                                            </strong>
                                                                            <div class="d-flex align-items-center">
                                                                                <small class="text-muted me-2">
                                                                                    <%= new
                                                                                        Date(comment.createdAt).toLocaleDateString()
                                                                                        %>
                                                                                </small>
                                                                                <% if (user &&
                                                                                    user.id===comment.author._id.toString())
                                                                                    { %>
                                                                                    <a href="/comment/delete/<%= blog._id %>/<%= comment._id %>"
                                                                                        class="btn btn-sm btn-outline-danger"
                                                                                        onclick="return confirm('Are you sure you want to delete this comment?')">
                                                                                        üóëÔ∏è
                                                                                    </a>
                                                                                    <% } %>
                                                                            </div>
                                                                        </div>
                                                                        <p class="mt-2 mb-0">
                                                                            <%= comment.content %>
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                                <% }); %>
                                                                    <% } else { %>
                                                                        <p class="text-muted">No comments yet. Be the
                                                                            first to comment!</p>
                                                                        <% } %>
                                            </div>

                                            <div class="mt-4">
                                                <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
                                            </div>
                            </article>
                            <% } else { %>
                                <div class="alert alert-warning" role="alert">
                                    Blog not found.
                                </div>
                                <% } %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>